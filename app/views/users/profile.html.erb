<table>
  <tr>
    <td>
      Username:
    </td>
    <td>
      <%= @user.username %>
    </td>
  </tr>
  <tr>
    <td>
      Email:
    </td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  <tr>
    <td>
      Full name:
    </td>
